@model PagedResult<Inmobiliaria.Models.Pago>
@using Inmobiliaria.Models
@{
    ViewData["Title"] = "Gestión de Pagos";
    var contratoId = ViewBag.ContratoId as int?;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-money-bill-wave text-primary"></i> @ViewData["Title"]
            </h2>
            <p class="text-muted mb-0">Administra todos los pagos del sistema inmobiliario</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Contrato" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-file-contract"></i> Ver Contratos
            </a>
        </div>
    </div>

    @if (TempData["Msg"] is string msg)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @msg
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] is string success)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @success
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] is string error)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Estadísticas Generales -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary bg-gradient text-white">
                <div class="card-body text-center">
                    <i class="fas fa-receipt fa-2x mb-2"></i>
                    <h4 class="mb-1">@Model.TotalCount</h4>
                    <p class="mb-0">Total Pagos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success bg-gradient text-white">
                <div class="card-body text-center">
                    <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                    <h4 class="mb-1">@ViewBag.TotalRecaudado?.ToString("C")</h4>
                    <p class="mb-0">Total Recaudado</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info bg-gradient text-white">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-check fa-2x mb-2"></i>
                    <h4 class="mb-1">@ViewBag.PagosEstesMes</h4>
                    <p class="mb-0">Pagos Este Mes</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning bg-gradient text-white">
                <div class="card-body text-center">
                    <i class="fas fa-file-contract fa-2x mb-2"></i>
                    <h4 class="mb-1">@ViewBag.ContratosActivos</h4>
                    <p class="mb-0">Contratos Activos</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros y Acciones -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros y Acciones</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label">Contrato</label>
                    <select name="contratoId" class="form-select">
                        <option value="">-- Todos los Contratos --</option>
                        @if (ViewBag.ContratosIndex is IEnumerable<SelectListItem> contratosIndex)
                        {
                            foreach (var c in contratosIndex)
                            {
                                <option value="@c.Value" selected="@(contratoId.HasValue && c.Value == contratoId.Value.ToString())">@c.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Elementos por página</label>
                    <input type="number" name="pageSize" class="form-control" value="@Model.PageSize" min="5" max="50" />
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Filtrar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-eraser"></i> Limpiar
                        </a>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <!-- Tabla de Pagos -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Lista de Pagos
                @if (contratoId.HasValue)
                {
                    <span class="badge bg-primary ms-2">Contrato #@contratoId</span>
                }
            </h5>
            <small class="text-muted">
                Mostrando @Model.Items.Count() de @Model.TotalCount resultados
            </small>
        </div>
        <div class="card-body">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th><i class="fas fa-file-contract"></i> Contrato</th>
                                <th><i class="fas fa-hashtag"></i> N° Pago</th>
                                <th><i class="fas fa-calendar"></i> Fecha</th>
                                <th><i class="fas fa-tag"></i> Concepto</th>
                                <th class="text-end"><i class="fas fa-dollar-sign"></i> Importe</th>
                                <th><i class="fas fa-info-circle"></i> Estado</th>
                                <th class="text-center" style="width: 200px;"><i class="fas fa-cogs"></i> Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var p in Model.Items)
                        {
                            <tr class="@(p.EstaAnulado ? "table-danger" : p.Estado == "Pagado" ? "table-success" : "table-warning")">
                                <td>
                                    <strong>#@p.Id</strong>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <strong>Contrato #@p.ContratoId</strong>
                                            @if (p.Contrato != null)
                                            {
                                                <br>
                                                <small class="text-muted">
                                                    @if (p.Contrato.Inquilino != null)
                                                    {
                                                        <i class="fas fa-user"></i> @p.Contrato.Inquilino.NombreCompleto
                                                    }
                                                </small>
                                                @if (p.Contrato.Inmueble != null)
                                                {
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="fas fa-home"></i> @p.Contrato.Inmueble.Direccion
                                                    </small>
                                                }
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary fs-6">#@p.NumeroPago</span>
                                </td>
                                <td>
                                    <div>
                                        <strong>@p.FechaPago.ToString("dd/MM/yyyy")</strong>
                                        <br>
                                        <small class="text-muted">@p.FechaPago.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-medium">@p.Concepto</span>
                                </td>
                                <td class="text-end">
                                    <strong class="fs-6 text-success">@p.Importe.ToString("C")</strong>
                                </td>
                                <td>
                                    <span class="badge @(p.Estado == "Pagado" ? "bg-success" : 
                                                       p.Estado == "Anulado" ? "bg-danger" : "bg-warning")">
                                        @p.Estado
                                    </span>
                                    @if (p.EstaAnulado && p.AnuladoAt.HasValue)
                                    {
                                        <br><small class="text-muted">Anulado: @p.AnuladoAt.Value.ToString("dd/MM/yyyy")</small>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group" aria-label="Acciones del pago">
                                        <a asp-action="Details" asp-route-id="@p.Id" 
                                           class="btn btn-outline-info btn-sm" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (!p.EstaAnulado)
                                        {
                                            <a asp-action="Edit" asp-route-id="@p.Id" 
                                               class="btn btn-outline-primary btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@p.Id" 
                                               class="btn btn-outline-danger btn-sm" title="Anular">
                                                <i class="fas fa-ban"></i>
                                            </a>
                                        }
                                        <a asp-action="IndexByContrato" asp-route-id="@p.ContratoId" 
                                           class="btn btn-outline-success btn-sm" title="Ver todos los pagos del contrato">
                                            <i class="fas fa-list-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-3x mb-3 text-primary"></i>
                    <h4>No hay pagos registrados</h4>
                    <p class="mb-3">
                        @if (contratoId.HasValue)
                        {
                            <span>No se encontraron pagos para el contrato seleccionado.</span>
                        }
                        else
                        {
                            <span>Aún no se han registrado pagos en el sistema.</span>
                        }
                    </p>
                    <p class="text-muted">
                        Para crear nuevos pagos, dirígete a la vista de contratos y selecciona el contrato específico.
                    </p>
                </div>
            }
        </div>
    </div>

    @{
        var totalPages = (int)Math.Ceiling(Model.TotalCount / (double)Model.PageSize);
        if (totalPages < 1) totalPages = 1;
        var startPage = Math.Max(1, Model.CurrentPage - 2);
        var endPage = Math.Min(totalPages, Model.CurrentPage + 2);
    }

    @if (totalPages > 1)
    {
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="text-muted">
                Mostrando @((Model.CurrentPage - 1) * Model.PageSize + 1) al 
                @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)) 
                de @Model.TotalCount registros
            </div>
            <nav aria-label="Paginación de pagos">
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-pageSize="@Model.PageSize" asp-route-contratoId="@contratoId">
                            <i class="fas fa-angle-double-left"></i>
                        </a>
                    </li>
                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize" asp-route-contratoId="@contratoId">
                            <i class="fas fa-angle-left"></i> Anterior
                        </a>
                    </li>
                    
                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-pageSize="@Model.PageSize" asp-route-contratoId="@contratoId">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }
                    
                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize" asp-route-contratoId="@contratoId">@i</a>
                        </li>
                    }
                    
                    @if (endPage < totalPages)
                    {
                        @if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@totalPages" asp-route-pageSize="@Model.PageSize" asp-route-contratoId="@contratoId">@totalPages</a>
                        </li>
                    }
                    
                    <li class="page-item @(Model.CurrentPage >= totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize" asp-route-contratoId="@contratoId">
                            Siguiente <i class="fas fa-angle-right"></i>
                        </a>
                    </li>
                    <li class="page-item @(Model.CurrentPage >= totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@totalPages" asp-route-pageSize="@Model.PageSize" asp-route-contratoId="@contratoId">
                            <i class="fas fa-angle-double-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>



@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert-dismissible').alert('close');
        }, 5000);

        // Confirmar anulación de pagos
        $('[onclick*="confirm"]').click(function(e) {
            if (!confirm('¿Está seguro de anular este pago? Esta acción no se puede deshacer.')) {
                e.preventDefault();
                return false;
            }
        });
    </script>

    <style>
        .table-responsive {
            border-radius: 0.5rem;
        }
        
        .badge {
            font-size: 0.875em;
        }
        
        .btn-group .btn {
            border-radius: 0;
        }
        
        .btn-group .btn:first-child {
            border-top-left-radius: 0.375rem;
            border-bottom-left-radius: 0.375rem;
        }
        
        .btn-group .btn:last-child {
            border-top-right-radius: 0.375rem;
            border-bottom-right-radius: 0.375rem;
        }
    </style>
}
