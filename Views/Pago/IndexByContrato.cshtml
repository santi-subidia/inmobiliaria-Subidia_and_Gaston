@model IEnumerable<Inmobiliaria.Models.Pago>
@{
    ViewData["Title"] = "Pagos del Contrato";
    var contrato = ViewBag.Contrato as Inmobiliaria.Models.Contrato;
    long? contratoId = ViewBag.ContratoId as long?;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@ViewData["Title"]</h2>
            @if (contrato != null)
            {
                <div class="text-muted">
                    <strong>Contrato #@contrato.Id</strong>
                    @if (contrato.Inquilino != null)
                    {
                        <span> - @contrato.Inquilino.NombreCompleto</span>
                    }
                    @if (contrato.Inmueble != null)
                    {
                        <span> - @contrato.Inmueble.Direccion</span>
                    }
                </div>
            }
        </div>
        <div>
            <a asp-action="Create" asp-route-contratoId="@contratoId" class="btn btn-success">
                <i class="fas fa-plus"></i> Nuevo Pago
            </a>
            <a asp-controller="Contrato" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a Contratos
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (contrato != null)
    {
        <!-- Información del contrato -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-file-contract"></i> Información del Contrato
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Monto Mensual:</strong> @contrato.MontoMensual.ToString("C")<br>
                        <strong>Fecha Inicio:</strong> @contrato.FechaInicio.ToString("dd/MM/yyyy")<br>
                        <strong>Fecha Fin:</strong> @(contrato.FechaFinEfectiva?.ToString("dd/MM/yyyy") ?? contrato.FechaFinOriginal.ToString("dd/MM/yyyy"))
                    </div>
                    <div class="col-md-6">
                        <strong>Estado:</strong> 
                        <span class="badge @(contrato.Estado == EstadoContrato.VIGENTE ? "bg-success" : 
                                           contrato.Estado == EstadoContrato.FINALIZADO ? "bg-secondary" : "bg-danger")">
                            @contrato.Estado
                        </span>
                        @if (contrato.Estado == EstadoContrato.RESCINDIDO)
                        {
                            <div class="mt-2">
                                <strong>Multa por Rescisión:</strong> <span class="text-danger">@contrato.MontoMulta.ToString("C")</span>
                            </div>
                        }
                    </div>
                </div>
                
                @{
                    var totalPagado = ViewBag.TotalPagado != null ? (decimal)ViewBag.TotalPagado : 0;
                    var fechaCalculo = contrato.FechaFinEfectiva ?? contrato.FechaFinOriginal;
                    var totalContrato = contrato.MontoTotal;
                    var totalConMulta = totalContrato + contrato.MontoMulta;
                    var saldoPendiente = totalConMulta - totalPagado;
                }
                
                <!-- Resumen Financiero -->
                <div class="row mt-3 pt-3 border-top">
                    <div class="col-md-12">
                        <h6 class="text-primary mb-3"><i class="fas fa-calculator"></i> Resumen Financiero</h6>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center p-2 bg-light rounded">
                                    <small class="text-muted d-block">Total Contrato</small>
                                    <strong class="text-primary">@totalContrato.ToString("C")</strong>
                                </div>
                            </div>
                            @if (contrato.Estado == EstadoContrato.RESCINDIDO && contrato.MontoMulta > 0)
                            {
                                <div class="col-md-3">
                                    <div class="text-center p-2 bg-danger bg-opacity-10 rounded">
                                        <small class="text-muted d-block">Multa</small>
                                        <strong class="text-danger">@contrato.MontoMulta.ToString("C")</strong>
                                    </div>
                                </div>
                            }
                            <div class="col-md-3">
                                <div class="text-center p-2 bg-success bg-opacity-10 rounded">
                                    <small class="text-muted d-block">Pagado</small>
                                    <strong class="text-success">@totalPagado.ToString("C")</strong>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center p-2 @(saldoPendiente > 0 ? "bg-warning bg-opacity-10" : "bg-success bg-opacity-10") rounded">
                                    <small class="text-muted d-block">Saldo Pendiente</small>
                                    <strong class="@(saldoPendiente > 0 ? "text-warning" : "text-success")">
                                        @saldoPendiente.ToString("C")
                                    </strong>
                                </div>
                            </div>
                        </div>
                        
                        @if (contrato.Estado == EstadoContrato.RESCINDIDO)
                        {
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <div class="alert alert-warning mb-0">
                                        <small>
                                            <i class="fas fa-exclamation-triangle"></i>
                                            <strong>Total a Pagar (con multa):</strong> @totalConMulta.ToString("C")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Tabla de pagos -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-money-bill-wave"></i> Pagos (@Model.Count())
            </h5>
            <div>
                <small class="text-muted">
                    Total pagado: <strong>@ViewBag.TotalPagado.ToString("C")</strong>
                </small>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nº Pago</th>
                                <th>Fecha Pago</th>
                                <th>Concepto</th>
                                <th>Importe</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pago in Model.OrderBy(p => p.NumeroPago))
                            {
                                <tr class="@(pago.Estado == "Pagado" ? "table-success" : 
                                           pago.Estado == "Anulado" ? "table-danger" : "table-warning")">
                                    <td>
                                        <strong>#@pago.NumeroPago</strong>
                                    </td>
                                    <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                                    <td>@pago.Concepto</td>
                                    <td>
                                        <strong>@pago.Importe.ToString("C")</strong>
                                    </td>
                                    <td>
                                        <span class="badge @(pago.Estado == "Pagado" ? "bg-success" : 
                                                           pago.Estado == "Anulado" ? "bg-danger" : "bg-warning")">
                                            @pago.Estado
                                        </span>
                                        @if (pago.EstaAnulado && pago.AnuladoAt.HasValue)
                                        {
                                            <br><small class="text-muted">Anulado: @pago.AnuladoAt.Value.ToString("dd/MM/yyyy")</small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@pago.Id" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            @if (pago.Estado != "ANULADO")
                                            {
                                                <a asp-action="Edit" asp-route-id="@pago.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-edit"></i> Editar
                                                </a>
                                                <form asp-action="AnularPago" method="post" class="d-inline" 
                                                      onsubmit="return confirm('¿Está seguro de anular este pago?')">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@pago.Id" />
                                                    <input type="hidden" name="contratoId" value="@contratoId" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-ban"></i> Anular
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="btn btn-sm btn-outline-secondary disabled">
                                                    <i class="fas fa-ban"></i> Anulado
                                                </span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h5>No hay pagos registrados</h5>
                    <p class="mb-3">Este contrato no tiene pagos asociados.</p>
                    <a asp-action="Create" asp-route-contratoId="@contratoId" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Crear Primer Pago
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}