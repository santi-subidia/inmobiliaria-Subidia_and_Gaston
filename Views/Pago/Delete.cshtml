@model Inmobiliaria.Models.Pago
@{
    ViewData["Title"] = "Anular Pago";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>Atención:</strong> vas a <u>anular</u> el pago <strong>#@Model.Id</strong> del contrato <strong>#@Model.ContratoId</strong>.
</div>

<dl class="row">
    <dt class="col-sm-3">N° Pago</dt><dd class="col-sm-9">@Model.NumeroPago</dd>
    <dt class="col-sm-3">Fecha</dt><dd class="col-sm-9">@Model.FechaPago:dd/MM/yyyy</dd>
    <dt class="col-sm-3">Concepto</dt><dd class="col-sm-9">@Model.Concepto</dd>
    <dt class="col-sm-3">Importe</dt><dd class="col-sm-9">@Model.Importe.ToString("C")</dd>
    <dt class="col-sm-3">Estado</dt><dd class="col-sm-9">@Model.Estado</dd>
</dl>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmar anulación</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
</form>
