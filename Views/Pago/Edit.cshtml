@model Inmobiliaria.Models.Pago
@{
    ViewData["Title"] = "Editar Pago";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="card card-body">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="ContratoId" class="form-label"></label>
            <input asp-for="ContratoId" class="form-control" readonly />
            <div class="form-text">No se puede modificar el contrato de un pago</div>
        </div>

        <div class="col-md-4">
            <label asp-for="NumeroPago" class="form-label"></label>
            <input asp-for="NumeroPago" class="form-control" readonly />
            <div class="form-text">El número de pago no se puede modificar</div>
        </div>

        <div class="col-md-4">
            <label asp-for="FechaPago" class="form-label"></label>
            <input asp-for="FechaPago" class="form-control" type="date" readonly />
            <div class="form-text">La fecha de pago no se puede modificar</div>
        </div>

        <div class="col-md-6">
            <label asp-for="Concepto" class="form-label"></label>
            <input asp-for="Concepto" class="form-control" />
            <span asp-validation-for="Concepto" class="text-danger"></span>
            <div class="form-text">Solo el concepto puede ser modificado</div>
        </div>

        <div class="col-md-3">
            <label asp-for="Importe" class="form-label"></label>
            <input asp-for="Importe" class="form-control" readonly />
            <div class="form-text">El importe no se puede modificar</div>
        </div>

        <div class="col-md-3">
            <label asp-for="Estado" class="form-label"></label>
            <input asp-for="Estado" class="form-control" readonly />
            <div class="form-text">Use la opción "Anular" para cambiar el estado</div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> Guardar cambios
        </button>
        <a asp-action="IndexByContrato" asp-route-id="@Model.ContratoId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a Pagos del Contrato
        </a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
            <i class="bi bi-eye"></i> Ver Detalles
        </a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
