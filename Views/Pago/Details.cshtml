@model Inmobiliaria.Models.Pago
@{
    ViewData["Title"] = "Detalle de Pago";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

@if (TempData["Msg"] is string msg)
{
    <div class="alert alert-info">@msg</div>
}

<dl class="row">
    <dt class="col-sm-3">Contrato</dt>      <dd class="col-sm-9">#@Model.ContratoId</dd>
    <dt class="col-sm-3">N° Pago</dt>       <dd class="col-sm-9">@Model.NumeroPago</dd>
    <dt class="col-sm-3">Fecha</dt>         <dd class="col-sm-9">@Model.FechaPago.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-3">Concepto</dt>      <dd class="col-sm-9">@Model.Concepto</dd>
    <dt class="col-sm-3">Importe</dt>       <dd class="col-sm-9">@Model.Importe.ToString("C")</dd>
    <dt class="col-sm-3">Estado</dt>        <dd class="col-sm-9">
        @if(Model.Estado == "Pendiente")
        {
            <span class="badge bg-warning text-dark">@Model.Estado</span>
        }
        else if(Model.Estado == "Pagado")
        {
            <span class="badge bg-success">@Model.Estado</span>
        }
        else if(Model.Estado == "Anulado")
        {
            <span class="badge bg-danger">@Model.Estado</span>
        }
        else
        {
            <span class="badge bg-secondary">@Model.Estado</span>
        }
    </dd>
    <dt class="col-sm-3">Creado por</dt>    <dd class="col-sm-9">Usuario #@Model.CreadoPorId</dd>
    <dt class="col-sm-3">Creado</dt>        <dd class="col-sm-9">@Model.CreadoAt.ToString("dd/MM/yyyy HH:mm")</dd>
    @if (Model.AnuladoAt.HasValue)
    {
        <dt class="col-sm-3">Anulado por</dt> <dd class="col-sm-9">Usuario #@Model.AnuladoPorId</dd>
        <dt class="col-sm-3">Anulado</dt>     <dd class="col-sm-9">@Model.AnuladoAt?.ToString("dd/MM/yyyy HH:mm")</dd>
    }
</dl>

<div class="mt-4">
    <div class="btn-group" role="group">
        @if (!Model.EstaAnulado)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Editar Concepto
            </a>
        }
        <a asp-action="IndexByContrato" asp-route-id="@Model.ContratoId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a Pagos
        </a>
    </div>
    
    @if (!Model.EstaAnulado)
    {
        <div class="mt-2">
            <form asp-action="AnularPago" method="post" style="display: inline;" 
                  onsubmit="return confirm('¿Está seguro de que desea anular este pago? Esta acción no se puede deshacer.');">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="contratoId" value="@Model.ContratoId" />
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-x-circle"></i> Anular Pago
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="mt-2">
            <span class="text-muted">
                <i class="bi bi-info-circle"></i> Este pago ha sido anulado y no se puede modificar
            </span>
        </div>
    }
</div>
