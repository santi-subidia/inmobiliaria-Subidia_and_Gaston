@model Inmobiliaria.Models.Pago
@{
    ViewData["Title"] = "Detalle de Pago";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

@if (TempData["Msg"] is string msg)
{
    <div class="alert alert-info">@msg</div>
}

<dl class="row">
    <dt class="col-sm-3">ID</dt>            <dd class="col-sm-9">@Model.Id</dd>
    <dt class="col-sm-3">Contrato</dt>      <dd class="col-sm-9">@Model.ContratoId</dd>
    <dt class="col-sm-3">NÂ° Pago</dt>       <dd class="col-sm-9">@Model.NumeroPago</dd>
    <dt class="col-sm-3">Fecha</dt>         <dd class="col-sm-9">@Model.FechaPago:dd/MM/yyyy</dd>
    <dt class="col-sm-3">Concepto</dt>      <dd class="col-sm-9">@Model.Concepto</dd>
    <dt class="col-sm-3">Importe</dt>       <dd class="col-sm-9">@Model.Importe.ToString("C")</dd>
    <dt class="col-sm-3">Estado</dt>        <dd class="col-sm-9">@Model.Estado</dd>
    <dt class="col-sm-3">Creado por</dt>    <dd class="col-sm-9">@Model.CreadoPor</dd>
    <dt class="col-sm-3">Creado</dt>        <dd class="col-sm-9">@Model.CreadoAt.ToLocalTime()</dd>
    @if (Model.AnuladoAt.HasValue)
    {
        <dt class="col-sm-3">Anulado por</dt> <dd class="col-sm-9">@Model.AnuladoPor</dd>
        <dt class="col-sm-3">Anulado</dt>     <dd class="col-sm-9">@Model.AnuladoAt?.ToLocalTime()</dd>
    }
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
    @if (!Model.EstaAnulado)
    {
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Anular</a>
    }
</div>
