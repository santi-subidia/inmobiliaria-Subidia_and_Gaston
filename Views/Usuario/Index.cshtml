@model IEnumerable<Inmobiliaria.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">+ Nuevo usuario</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay usuarios.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Rol</th>
                <th>Activo</th>
                <th style="width:180px" class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Email</td>
                <td>@($"{u.Nombre} {u.Apellido}")</td>
                <td>@u.RolId</td>
                <td>@(u.IsActive ? "SÃ­" : "No")</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-sm btn-outline-secondary">Ver</a>
                    <a asp-action="Edit"    asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                    <a asp-action="Delete"  asp-route-id="@u.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
