@{
    ViewData["Title"] = "Inicio";
}

<div class="container text-center">
    <!-- HERO -->
    <section class="mb-5">
        <h1 class="display-5 fw-bold mb-3" style="color: var(--main-blue);">
            Bienvenido al Sistema de Gestión Inmobiliaria
        </h1>
        <p class="lead mb-0">
            Una plataforma integral para administrar <strong>propiedades, contratos, inquilinos y pagos</strong>
            de forma simple, organizada y segura.
        </p>
    </section>

    <!-- FEATURES -->
    <section class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="p-4 h-100 box-shadow rounded">
                <i class="bi bi-house-door fs-1 text-primary mb-3"></i>
                <h5 class="fw-bold">Gestión de Inmuebles</h5>
                <p class="small mb-0">Registro de propiedades con sus características, estado y propietario.</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="p-4 h-100 box-shadow rounded">
                <i class="bi bi-file-text fs-1 text-primary mb-3"></i>
                <h5 class="fw-bold">Contratos</h5>
                <p class="small mb-0">Creación, renovación y finalización con control de fechas y montos.</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="p-4 h-100 box-shadow rounded">
                <i class="bi bi-cash-coin fs-1 text-primary mb-3"></i>
                <h5 class="fw-bold">Pagos</h5>
                <p class="small mb-0">Control de pagos mensuales, historial y cálculo de multas por rescisión.</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="p-4 h-100 box-shadow rounded">
                <i class="bi bi-shield-lock fs-1 text-primary mb-3"></i>
                <h5 class="fw-bold">Seguridad</h5>
                <p class="small mb-0">Roles diferenciados y auditoría para garantizar trazabilidad y control.</p>
            </div>
        </div>
    </section>
</div>

