@model Inmobiliaria.Models.Persona
@{
    ViewData["Title"] = "Eliminar Persona";
}

<h2>Eliminar</h2>
<h5>¿Seguro que querés eliminar este registro?</h5>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">DNI</dt><dd class="col-sm-10">@Model.DNI</dd>
        <dt class="col-sm-2">Nombre</dt><dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido</dt><dd class="col-sm-10">@Model.Apellido</dd>
        <dt class="col-sm-2">Contacto</dt><dd class="col-sm-10">@Model.Contacto</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
