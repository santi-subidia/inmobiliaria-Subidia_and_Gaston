@model IEnumerable<Inmobiliaria.Models.Inquilino>
@{
    ViewData["Title"] = "Inquilinos";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<p>
  <a asp-action="Create" class="btn btn-success">+ Nuevo inquilino</a>
</p>

<table class="table table-striped table-hover align-middle">
  <thead class="table-light">
    <tr>
      <th>DNI</th>
      <th>Apellido</th>
      <th>Nombre</th>
      <th>Tel√©fono</th>
      <th>Email</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
@foreach (var p in Model)
{
    <tr>
      <td>@p.Dni</td>
      <td>@p.Apellido</td>
      <td>@p.Nombre</td>
      <td>@p.Telefono</td>
      <td>@p.Email</td>
      <td class="text-end">
        <div class="btn-group" role="group">
          <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-secondary btn-sm">Ver</a>
          <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm">Editar</a>
          <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
        </div>
      </td>
    </tr>
}
  </tbody>
</table>