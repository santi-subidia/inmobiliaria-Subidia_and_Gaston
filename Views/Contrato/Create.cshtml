@model Inmobiliaria.Models.Contrato
@{
    ViewData["Title"] = "Nuevo Contrato";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="InquilinoId" class="form-label"></label>
                <select asp-for="InquilinoId" class="form-select" asp-items="ViewBag.InquilinoId">
                    <option value="">Seleccione un inquilino</option>
                </select>
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="InmuebleId" class="form-label"></label>
                <input asp-for="InmuebleId" class="form-control" />
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
                <div id="inmuebleError" class="text-danger"></div>
                <small class="text-muted">Ingrese el ID del inmueble a contratar</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="FechaInicio" class="form-label"></label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="FechaFinOriginal" class="form-label"></label>
                <input asp-for="FechaFinOriginal" class="form-control" type="date" />
                <span asp-validation-for="FechaFinOriginal" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="MontoMensual" class="form-label"></label>
                <input asp-for="MontoMensual" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="MontoMensual" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estado">
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="RenovadoDeId" class="form-label"></label>
        <input asp-for="RenovadoDeId" class="form-control" type="number" />
        <span asp-validation-for="RenovadoDeId" class="text-danger"></span>
        <small class="text-muted">Opcional: ID del contrato del cual se renueva</small>
    </div>

    <div class="mb-4">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Verificar disponibilidad del inmueble cuando se cambia el campo
        document.getElementById('InmuebleId').addEventListener('blur', async function() {
            const inmuebleId = this.value;
            const errorDiv = document.getElementById('inmuebleError');
            
            if (!inmuebleId || inmuebleId <= 0) {
                errorDiv.innerText = '';
                return;
            }
            
            try {
                const response = await fetch(`/Contrato/VerificarDisponibilidadInmueble?inmuebleId=${encodeURIComponent(inmuebleId)}`);
                const data = await response.json();
                
                if (data && data.mensaje) {
                    errorDiv.innerText = data.mensaje;
                } else {
                    errorDiv.innerText = '';
                }
            } catch (e) {
                console.error('Error al verificar disponibilidad:', e);
            }
        });

        // Calcular duración automáticamente
        function calcularDuracion() {
            const fechaInicio = document.getElementById('FechaInicio').value;
            const fechaFin = document.getElementById('FechaFinOriginal').value;
            
            if (fechaInicio && fechaFin) {
                const inicio = new Date(fechaInicio);
                const fin = new Date(fechaFin);
                
                if (fin > inicio) {
                    const diferenciaMeses = (fin.getFullYear() - inicio.getFullYear()) * 12 + (fin.getMonth() - inicio.getMonth());
                    console.log(`Duración del contrato: ${diferenciaMeses} meses`);
                }
            }
        }

        document.getElementById('FechaInicio').addEventListener('change', calcularDuracion);
        document.getElementById('FechaFinOriginal').addEventListener('change', calcularDuracion);
    </script>
}