@model PagedResult<Inmobiliaria.Models.Contrato>
@{
    ViewData["Title"] = "Contratos";
    bool isAdmin = User.IsInRole("Administrador");
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a asp-action="Create" class="btn btn-success">+ Nuevo contrato</a>
    </div>
</div>

<!-- Filtros avanzados -->
<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0"><i class="fas fa-filter"></i> Filtros y Reportes</h6>
    </div>
    <div class="card-body">
        <form id="filterForm" method="get" class="row g-3 align-items-end">
            <!-- Campo oculto para mantener la página al filtrar -->
            <input type="hidden" name="page" value="1" />
            
            <!-- Estado -->
            <div class="col-md-2">
                <label for="estado" class="form-label">Estado</label>
                <select name="estado" id="estado" class="form-select">
                    <option value="">Todos</option>
                    @if (ViewBag.FiltroEstado?.ToString() == "VIGENTE")
                    {
                        <option value="VIGENTE" selected>Vigente</option>
                    }
                    else
                    {
                        <option value="VIGENTE">Vigente</option>
                    }
                    @if (ViewBag.FiltroEstado?.ToString() == "FINALIZADO")
                    {
                        <option value="FINALIZADO" selected>Finalizado</option>
                    }
                    else
                    {
                        <option value="FINALIZADO">Finalizado</option>
                    }
                    @if (ViewBag.FiltroEstado?.ToString() == "RESCINDIDO")
                    {
                        <option value="RESCINDIDO" selected>Rescindido</option>
                    }
                    else
                    {
                        <option value="RESCINDIDO">Rescindido</option>
                    }
                </select>
            </div>

            <!-- Propietario -->
            <div class="col-md-2">
                <label for="propietarioId" class="form-label">Propietario</label>
                <select name="propietarioId" id="propietarioId" class="form-select">
                    <option value="">Todos</option>
                    @if (ViewBag.PropietariosLista != null)
                    {
                        @foreach (var prop in ViewBag.PropietariosLista as IEnumerable<Inmobiliaria.Models.Propietario>)
                        {
                            @if (ViewBag.FiltroPropietario?.ToString() == prop.Id.ToString())
                            {
                                <option value="@prop.Id" selected>@prop.NombreCompleto</option>
                            }
                            else
                            {
                                <option value="@prop.Id">@prop.NombreCompleto</option>
                            }
                        }
                    }
                </select>
            </div>

            <!-- Inmueble -->
            <div class="col-md-2">
                <label for="inmuebleId" class="form-label">Inmueble</label>
                <select name="inmuebleId" id="inmuebleId" class="form-select">
                    <option value="">Todos</option>
                    @if (ViewBag.InmueblesLista != null)
                    {
                        @foreach (var inm in ViewBag.InmueblesLista as IEnumerable<Inmobiliaria.Models.Inmueble>)
                        {
                            @if (ViewBag.FiltroInmueble?.ToString() == inm.Id.ToString())
                            {
                                <option value="@inm.Id" selected>@inm.Direccion</option>
                            }
                            else
                            {
                                <option value="@inm.Id">@inm.Direccion</option>
                            }
                        }
                    }
                </select>
            </div>

            @* <!-- Fecha Desde -->
            <div class="col-md-2">
                <label for="fechaDesde" class="form-label">Desde</label>
                <input type="date" name="fechaDesde" id="fechaDesde" class="form-control" 
                       value="@(ViewBag.FechaDesde != null ? ((DateOnly)ViewBag.FechaDesde).ToString("yyyy-MM-dd") : "")" />
            </div>

            <!-- Fecha Hasta -->
            <div class="col-md-2">
                <label for="fechaHasta" class="form-label">Hasta</label>
                <input type="date" name="fechaHasta" id="fechaHasta" class="form-control" 
                       value="@(ViewBag.FechaHasta != null ? ((DateOnly)ViewBag.FechaHasta).ToString("yyyy-MM-dd") : "")" />
            </div> *@
        </form>

        <!-- Filtros rápidos -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="btn-toolbar" role="toolbar">
                    <!-- Botones de acción -->
                    <div class="btn-group me-3" role="group">
                        <button type="submit" form="filterForm" class="btn btn-primary">
                            <i class="fas fa-search"></i> Filtrar
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Limpiar
                        </a>
                    </div>

                    <!-- Filtros de vencimiento -->
                    <div class="btn-group me-3" role="group">
                        <button type="button" class="btn btn-outline-info dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-clock"></i> Próximos a Vencer
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { proximosVencer = 30 })">En 30 días</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { proximosVencer = 60 })">En 60 días</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { proximosVencer = 90 })">En 90 días</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contador de resultados -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">
            Mostrando @Model.Items.Count() de @Model.TotalCount contrato@(Model.TotalCount != 1 ? "s" : "")
            @if (ViewBag.FiltroEstado != null)
            {
                <span class="badge bg-info">Filtros aplicados</span>
            }
        </span>
    </div>
    <div>
        @if (ViewBag.FiltroEstado != null)
        {
            var estadoBadgeClass = ViewBag.FiltroEstado.ToString() == "VIGENTE" ? "bg-success" : 
                                   ViewBag.FiltroEstado.ToString() == "FINALIZADO" ? "bg-secondary" : "bg-danger";
            <span class="badge @estadoBadgeClass">@ViewBag.FiltroEstado</span>
        }
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Inquilino</th>
                <th>Inmueble</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Monto Mensual</th>
                <th>Estado</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contrato in Model.Items)
            {
                <tr class="@(contrato.Estado() == "VIGENTE" ? "table-success" : 
                            contrato.Estado() == "FINALIZADO" ? "table-secondary" : "table-danger")">
                    <td>@contrato.Id</td>
                    <td>
                        @if (contrato.Inquilino != null)
                        {
                            <span>@contrato.Inquilino.Nombre @contrato.Inquilino.Apellido</span><br>
                            <small class="text-muted">DNI: @contrato.Inquilino.Dni</small>
                        }
                        else
                        {
                            <span class="text-muted">ID: @contrato.InquilinoId</span>
                        }
                    </td>
                    <td>
                        @if (contrato.Inmueble != null)
                        {
                            <span>@contrato.Inmueble.Direccion</span><br>
                            @if (contrato.Inmueble.Propietario != null)
                            {
                                <small class="text-muted">Propietario: @contrato.Inmueble.Propietario.NombreCompleto</small>
                            }
                            else
                            {
                                <small class="text-muted">Propietario ID: @contrato.Inmueble.PropietarioId</small>
                            }
                        }
                        else
                        {
                            <span class="text-muted">ID: @contrato.InmuebleId</span>
                        }
                    </td>
                    <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (contrato.FechaFinEfectiva.HasValue)
                        {
                            <span>@contrato.FechaFinEfectiva.Value.ToString("dd/MM/yyyy")</span><br>
                            <small class="text-muted">Orig: @contrato.FechaFinOriginal.ToString("dd/MM/yyyy")</small>
                        }
                        else
                        {
                            <span>@contrato.FechaFinOriginal.ToString("dd/MM/yyyy")</span>
                        }
                    </td>
                    <td>@contrato.MontoMensual.ToString("C")</td>
                    <td>
                        <span class="badge @(contrato.Estado() == "VIGENTE" ? "bg-success" : 
                                           contrato.Estado() == "FINALIZADO" ? "bg-secondary" : "bg-danger")">
                            @contrato.Estado()
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@contrato.Id" class="btn btn-outline-secondary btn-sm">Ver</a>
                            @if (contrato.Estado() == "VIGENTE")
                            {
                                <a asp-action="Edit" asp-route-id="@contrato.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                                <a asp-controller="Pago" asp-action="IndexByContrato" asp-route-id="@contrato.Id" class="btn btn-outline-success btn-sm">Ver pagos</a>
                                <a asp-action="Rescindir" asp-route-id="@contrato.Id" class="btn btn-outline-danger btn-sm">Rescindir</a>
                            }
                            else if (contrato.Estado() == "FINALIZADO" || contrato.Estado() == "RESCINDIDO")
                            {
                                <a asp-controller="Pago" asp-action="IndexByContrato" asp-route-id="@contrato.Id" class="btn btn-outline-success btn-sm">Ver pagos</a>
                                <a asp-action="Renovar" asp-route-id="@contrato.Id" class="btn btn-outline-primary btn-sm">Renovar</a>
                            }
                            @if (isAdmin)
                            {
                                <a asp-action="Delete" asp-route-id="@contrato.Id" class="btn btn-outline-warning btn-sm">Eliminar</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Paginación -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Paginación de contratos">
        <ul class="pagination justify-content-center mt-4">
            <!-- Botón Anterior -->
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { 
                         page = Model.CurrentPage - 1, 
                         estado = ViewBag.FiltroEstado 
                       })">Anterior</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Anterior</span>
                </li>
            }

            <!-- Números de página -->
            @{
                int startPage = Math.Max(1, Model.CurrentPage - 2);
                int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
            }

            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { 
                         page = 1, 
                         estado = ViewBag.FiltroEstado 
                       })">1</a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { 
                         page = i, 
                         estado = ViewBag.FiltroEstado 
                       })">@i</a>
                </li>
            }

            @if (endPage < Model.TotalPages)
            {
                @if (endPage < Model.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { 
                         page = Model.TotalPages, 
                         estado = ViewBag.FiltroEstado 
                       })">@Model.TotalPages</a>
                </li>
            }

            <!-- Botón Siguiente -->
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { 
                         page = Model.CurrentPage + 1, 
                         estado = ViewBag.FiltroEstado 
                       })">Siguiente</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Siguiente</span>
                </li>
            }
        </ul>
    </nav>

    <!-- Info de paginación -->
    <div class="text-center text-muted mt-2">
        <small>
            Página @Model.CurrentPage de @Model.TotalPages 
            (@Model.Items.Count() de @Model.TotalCount resultados)
        </small>
    </div>
}

@if (!Model.Items.Any())
{
    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle"></i> No hay contratos registrados.
    </div>
}