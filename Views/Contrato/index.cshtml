@model IEnumerable<Inmobiliaria.Models.Contrato>
@{
    ViewData["Title"] = "Contratos";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a asp-action="Create" class="btn btn-success">+ Nuevo contrato</a>
        <a asp-action="Vigentes" class="btn btn-info">Ver Vigentes</a>
        <a asp-action="ProximosVencer" class="btn btn-warning">Pr√≥ximos a Vencer</a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Inquilino</th>
                <th>Inmueble</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Monto Mensual</th>
                <th>Estado</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contrato in Model)
            {
                <tr class="@(contrato.Estado == EstadoContrato.VIGENTE ? "table-success" : 
                            contrato.Estado == EstadoContrato.FINALIZADO ? "table-secondary" : "table-danger")">
                    <td>@contrato.Id</td>
                    <td>
                        @if (contrato.Inquilino != null)
                        {
                            <span>@contrato.Inquilino.Nombre @contrato.Inquilino.Apellido</span><br>
                            <small class="text-muted">DNI: @contrato.Inquilino.Dni</small>
                        }
                        else
                        {
                            <span class="text-muted">ID: @contrato.InquilinoId</span>
                        }
                    </td>
                    <td>
                        @if (contrato.Inmueble != null)
                        {
                            <span>@contrato.Inmueble.Direccion</span><br>
                            @if (contrato.Inmueble.Propietario != null)
                            {
                                <small class="text-muted">Propietario: @contrato.Inmueble.Propietario.NombreCompleto</small>
                            }
                            else
                            {
                                <small class="text-muted">Propietario ID: @contrato.Inmueble.PropietarioId</small>
                            }
                        }
                        else
                        {
                            <span class="text-muted">ID: @contrato.InmuebleId</span>
                        }
                    </td>
                    <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (contrato.FechaFinEfectiva.HasValue)
                        {
                            <span>@contrato.FechaFinEfectiva.Value.ToString("dd/MM/yyyy")</span><br>
                            <small class="text-muted">Orig: @contrato.FechaFinOriginal.ToString("dd/MM/yyyy")</small>
                        }
                        else
                        {
                            <span>@contrato.FechaFinOriginal.ToString("dd/MM/yyyy")</span>
                        }
                    </td>
                    <td>@contrato.MontoMensual.ToString("C")</td>
                    <td>
                        <span class="badge @(contrato.Estado == EstadoContrato.VIGENTE ? "bg-success" : 
                                           contrato.Estado == EstadoContrato.FINALIZADO ? "bg-secondary" : "bg-danger")">
                            @contrato.Estado.ToString()
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@contrato.Id" class="btn btn-outline-secondary btn-sm">Ver</a>
                            @if (contrato.Estado == EstadoContrato.VIGENTE)
                            {
                                <a asp-action="Edit" asp-route-id="@contrato.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                                <a asp-action="Finalizar" asp-route-id="@contrato.Id" class="btn btn-outline-warning btn-sm">Finalizar</a>
                                <a asp-action="Rescindir" asp-route-id="@contrato.Id" class="btn btn-outline-danger btn-sm">Rescindir</a>
                            }
                            else if (contrato.Estado == EstadoContrato.FINALIZADO || contrato.Estado == EstadoContrato.RESCINDIDO)
                            {
                                <span class="btn btn-sm btn-outline-secondary disabled">Finalizado</span>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle"></i> No hay contratos registrados.
    </div>
}