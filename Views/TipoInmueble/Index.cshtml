@model IEnumerable<Inmobiliaria.Models.TipoInmueble>
@{
    ViewData["Title"] = "Tipos de Inmueble";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<p>
  <a asp-action="Create" class="btn btn-success">+ Nuevo tipo</a>
</p>

<table class="table table-striped table-hover align-middle">
  <thead class="table-light">
    <tr>
      <th>Nombre</th>
      <th>Descripci√≥n</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
@foreach (var t in Model)
{
    <tr>
      <td>@t.Nombre</td>
      <td>@t.Descripcion</td>
      <td class="text-end">
        <div class="btn-group" role="group">
          <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-outline-secondary btn-sm">Ver</a>
          <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-outline-primary btn-sm">Editar</a>
          <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
        </div>
      </td>
    </tr>
}
  </tbody>
</table>
