@{
    var isAuth = User?.Identity?.IsAuthenticated == true;
    var displayName = User?.FindFirst("full_name")?.Value ?? User?.Identity?.Name ?? "Usuario";
    var avatarUrl = User?.FindFirst("avatar_url")?.Value;
    var userId = User?.Identity?.Name;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Gestión Inmobiliaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-inmobiliaria.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    @RenderSection("Styles", required: false)
    
    <style>
        /* Mejoras estéticas para el navbar */
        .hover-bright:hover {
            color: white !important;
            transform: translateY(-1px);
            transition: all 0.3s ease;
        }
        
        .user-avatar {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .user-avatar:hover, .user-avatar-placeholder:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
        
        .dropdown-menu {
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            border-radius: 12px;
            padding: 8px 0;
            margin-top: 8px;
        }
        
        .dropdown-item {
            padding: 10px 20px;
            transition: all 0.3s ease;
            border-radius: 8px;
            margin: 2px 8px;
        }
        
        .dropdown-item:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transform: translateX(5px);
        }
        
        .dropdown-item:hover i {
            color: white !important;
        }
        
        .navbar-brand:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }
        
        .container {
            position: relative;
        }
        
        /* Mejorar el footer */
        footer {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-top: 3px solid #667eea;
            margin-top: 3rem;
        }
        
        /* Animaciones suaves */
        * {
            transition: all 0.3s ease;
        }
        
        /* Mejorar los contenedores principales */
        main {
            min-height: calc(100vh - 200px);
            padding-top: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-building me-2 text-warning"></i>
                    <span class="text-white">Sistema de Gestión Inmobiliaria</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Menú izquierda -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isAuth)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white-50 hover-bright" asp-controller="Propietario" asp-action="Index">
                                    <i class="fas fa-users me-1"></i> Propietarios
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50 hover-bright" asp-controller="Inquilino" asp-action="Index">
                                    <i class="fas fa-user-friends me-1"></i> Inquilinos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50 hover-bright" asp-controller="Inmueble" asp-action="Index">
                                    <i class="fas fa-home me-1"></i> Inmuebles
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50 hover-bright" asp-controller="Contrato" asp-action="Index">
                                    <i class="fas fa-file-contract me-1"></i> Contratos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50 hover-bright" asp-controller="Pago" asp-action="Index">
                                    <i class="fas fa-money-bill-wave me-1"></i> Pagos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50 hover-bright" asp-controller="Usuario" asp-action="Index">
                                    <i class="fas fa-users-cog me-1"></i> Usuarios
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Menú derecha (auth) -->
                    <ul class="navbar-nav ms-auto">
                        @if (isAuth)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <!-- Avatar del usuario -->
                                    @if (!string.IsNullOrEmpty(avatarUrl))
                                    {
                                        <img src="@avatarUrl" alt="Avatar" class="rounded-circle me-2 user-avatar" 
                                             style="width: 32px; height: 32px; object-fit: cover; border: 2px solid rgba(255,255,255,0.3);">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center me-2 user-avatar-placeholder"
                                             style="width: 32px; height: 32px; background: rgba(255,255,255,0.2); border: 2px solid rgba(255,255,255,0.3);">
                                            <i class="fas fa-user text-white" style="font-size: 14px;"></i>
                                        </div>
                                    }
                                    <span class="d-none d-sm-inline">@displayName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" style="min-width: 200px;">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Details" asp-route-id="@userId">
                                            <i class="fas fa-user-circle me-2 text-primary"></i> Mi Perfil
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline w-100">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i> Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white btn btn-outline-light btn-sm px-3" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Ingresar
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <small class="text-muted">
                        <i class="fas fa-copyright me-1"></i>
                        <span id="year"></span> Sistema de Gestión Inmobiliaria
                    </small>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <small class="text-muted">
                        <i class="fas fa-code me-1"></i>
                        Desarrollado con 
                        <i class="fas fa-heart text-danger mx-1"></i>
                        y ASP.NET Core
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Actualizar el año en el footer automáticamente
        document.getElementById('year').textContent = new Date().getFullYear();
        
        // Agregar efectos hover mejorados
        document.addEventListener('DOMContentLoaded', function() {
            // Efecto para los items del navbar
            const navItems = document.querySelectorAll('.nav-link');
            navItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
