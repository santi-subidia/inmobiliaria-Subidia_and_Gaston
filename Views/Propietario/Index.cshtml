@model IEnumerable<Inmobiliaria.Models.Propietario>

@{
    ViewData["Title"] = "Propietarios";
}

<div class="container mt-4 d-flex align-items-center gap-3">
    <h2 class="mb-0">Propietarios</h2>
    <a asp-action="Create" class="btn btn-primary ms-3">Crear nueva</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Contacto</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var p in Model)
{
        <tr>
            <td>@p.Persona?.DNI</td>
            <td>@p.Persona?.Nombre</td>
            <td>@p.Persona?.Apellido</td>
            <td>@p.Persona?.Contacto</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info">Detalles</a>
                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
