@model IEnumerable<Inmobiliaria.Models.Propietario>
@{
    ViewData["Title"] = "Propietarios";
}
<h2>@ViewData["Title"]</h2>

<p><a class="btn btn-primary" asp-action="Create">Nuevo propietario</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Tel√©fono</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var p in Model)
{
        <tr>
            <td>@p.Dni</td>
            <td>@p.Apellido</td>
            <td>@p.Nombre</td>
            <td>@p.Telefono</td>
            <td>@p.Email</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@p.Id">Ver</a> |
                <a asp-action="Edit" asp-route-id="@p.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@p.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
