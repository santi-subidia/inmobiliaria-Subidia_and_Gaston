@model Inmobiliaria.Models.Propietario
@{
    ViewData["Title"] = "Eliminar propietario";
}
<h2>@ViewData["Title"]</h2>
<h5 class="text-danger">¿Seguro que querés eliminar este propietario?</h5>

<div class="card mb-3">
  <div class="card-body">
    <dl class="row mb-0">
      <dt class="col-sm-3">DNI</dt>
      <dd class="col-sm-9">@Model.Dni</dd>

      <dt class="col-sm-3">Apellido</dt>
      <dd class="col-sm-9">@Model.Apellido</dd>

      <dt class="col-sm-3">Nombre</dt>
      <dd class="col-sm-9">@Model.Nombre</dd>

      <dt class="col-sm-3">Teléfono</dt>
      <dd class="col-sm-9">@Model.Telefono</dd>

      <dt class="col-sm-3">Email</dt>
      <dd class="col-sm-9">@Model.Email</dd>

      <dt class="col-sm-3">Dirección</dt>
      <dd class="col-sm-9">@Model.DireccionContacto</dd>
    </dl>
  </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
